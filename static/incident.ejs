    <hr>
    <h1>Signaler un nouveau incident</h1>
    <form action="/add" method="post">
      <p><label>Description</label></p>
      <textarea name="description" type="text" rows="4" cols="50" required></textarea> <br>
      <p><label>Adresse (Ex: "88 Gare de Louvain-la-Neuve Ottignis, BE-07306")</label></p>
      <p class="incorrect-password"><%= incorrect %></p>
      <textarea  name="address" type="text"rows="4" cols="50" required></textarea> <br>
      <p align="right"><label >Date: <%=rememeber%></label></p>
      <button type="submit" name="button">Ajouter l'incident</button>
  </form>
</div>
